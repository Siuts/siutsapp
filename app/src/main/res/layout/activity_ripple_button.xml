<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ripple_button"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.siuts.siutsapplication.RippleButtonActivity"
    android:background="@android:color/holo_green_light"
    android:padding="0dp"
    android:layout_margin="0dp">

    <com.skyfishjy.library.RippleBackground
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/slowRipple"
        app:rb_color="#0099CC"
        app:rb_radius="32dp"
        app:rb_rippleAmount="3"
        app:rb_duration="4000"
        app:rb_scale="6"
        android:padding="0dp"
        android:layout_margin="0dp">

        <com.skyfishjy.library.RippleBackground
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/fastRipple"
            app:rb_color="#0099CC"
            app:rb_radius="32dp"
            app:rb_rippleAmount="7"
            app:rb_duration="3000"
            app:rb_scale="6"
            android:padding="0dp"
            android:layout_margin="0dp">

            <io.saeid.fabloading.LoadingView
                android:id="@+id/recordButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX="4"
                android:scaleY="4"
                app:mfl_onclickLoading="false"
                app:mfl_duration="1600"
                app:mfl_repeat="50"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </com.skyfishjy.library.RippleBackground>

    </com.skyfishjy.library.RippleBackground>

</RelativeLayout>
